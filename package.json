{
	"title": "Twinkle",
	"name": "twinkle",
	"private": true,
	"repository": "wikimedia-gadgets/twinkle",
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"patchtest": "node scripts/patch-test.js",
		"server": "node scripts/server.js",
		"sync": "perl scripts/sync.pl",
		"test:unit": "qunit --require ./tests/unit/mocking/mb_repl.js ./tests/unit/*",
		"test:integration": "jest tests/integration",
		"test:integration:setup": "cd tests/integration/docker && bash main.sh",
		"test:integration:teardown": "cd tests/integration/docker && docker-compose down",
		"test": "npm run test:unit && npm run test:integration",
		"deployall": "perl scripts/sync.pl --mode=deploy --all"
	},
	"devDependencies": {
		"eslint": "^7.18.0",
		"eslint-plugin-es5": "^1.5.0",
		"jest": "^26.6.3",
		"jest-puppeteer": "^4.4.0",
		"jquery": "^3.5.1",
		"jsdom": "^16.4.0",
		"mwn": "^0.9.1",
		"puppeteer": "^7.0.1",
		"qunit": "^2.14.0"
	},
	"jest": {
		"preset": "jest-puppeteer"
	}
}
